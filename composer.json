{
    "name": "eyo/fw-php",
    "description": "EyoPHP - Educational PHP framework with permissions system, dynamic routing and middleware",
    "type": "project",
    "keywords": [
        "php",
        "framework",
        "mvc",
        "educational",
        "middleware",
        "permissions",
        "router"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Alexandre PLOUZEAU",
            "email": "alexandre.plouzeau@example.com",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/APlouzeau/framework-php/issues",
        "source": "https://github.com/APlouzeau/framework-php"
    },
    "require": {
        "php": ">=8.1",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.3",
        "phpdocumentor/shim": "^3.8"
    },
    "autoload": {
        "psr-4": {
            "EyoPHP\\Framework\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "EyoPHP\\Framework\\Tests\\": "tests/"
        }
    },
    "suggest": {
        "phpunit/phpunit": "To run framework tests and have test examples",
        "phpdocumentor/shim": "To generate API documentation"
    },
    "extra": {
        "branch-alias": {
            "dev-main": "0.1-dev"
        }
    },
    "config": {
        "allow-plugins": {
            "phpdocumentor/shim": true
        },
        "sort-packages": true,
        "optimize-autoloader": true,
        "preferred-install": "dist"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
        "post-create-project-cmd": [
            "php scripts/setup.php"
        ],
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html tests/results/coverage --coverage-text",
        "docs": "phpdoc -c phpdoc.xml",
        "docs-serve": "php -S localhost:8080 -t docs/api",
        "docs-clean": "rm -rf docs/api .phpdoc",
        "docs-setup": [
            "cp docs-template/phpdoc.xml.example phpdoc.xml",
            "echo 'PHPDoc configuration copied! Edit phpdoc.xml according to your needs.'"
        ]
    }
}
