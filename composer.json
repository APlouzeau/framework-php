{
    "name": "aplouzeau/eyophp-framework",
    "description": "EyoPHP - Framework PHP éducatif avec système de permissions, routing dynamique et middleware",
    "type": "library",
    "keywords": [
        "php",
        "framework",
        "mvc",
        "educational",
        "middleware",
        "permissions",
        "router"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Alexandre PLOUZEAU",
            "email": "alexandre.plouzeau@example.com",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/APlouzeau/framework-php/issues",
        "source": "https://github.com/APlouzeau/framework-php"
    },
    "require": {
        "php": ">=8.1",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.3",
        "phpdocumentor/shim": "^3.8"
    },
    "autoload": {
        "psr-4": {
            "EyoPHP\\Framework\\": "src/"
        },
        "classmap": [
            "class/",
            "controller/"
        ],
        "files": [
            "src/aliases.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "EyoPHP\\Framework\\Tests\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "2.0-dev"
        }
    },
    "config": {
        "allow-plugins": {
            "phpdocumentor/shim": true
        },
        "sort-packages": true,
        "optimize-autoloader": true,
        "preferred-install": "dist"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html tests/results/coverage --coverage-text",
        "cs-fix": "php scripts/code-style.php",
        "post-install-cmd": [
            "@php -r \"copy('.env.example', '.env');\""
        ]
    }
}
