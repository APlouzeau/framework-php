<?xml version="1.0" encoding="UTF-8"?>
<phpdocumentor
    configVersion="3"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="https://www.phpdoc.org"
    xsi:noNamespaceSchemaLocation="https://docs.phpdoc.org/latest/phpdoc.xsd"
>
    <title>Mon Application - Documentation API</title>
    <description>
        Documentation automatique de mon application utilisant EyoPHP Framework
    </description>

    <paths>
        <output>docs/api</output>
    </paths>

    <version number="1.0.0">
        <folder>src</folder>
        <folder>app</folder>
        <!-- Inclure le framework EyoPHP pour voir ses méthodes utiles -->
        <folder>vendor/aplouzeau/eyophp-framework/src</folder>
        <!-- Ajoutez ici vos autres dossiers à documenter -->
    </version>

    <setting name="graphs.enabled" value="true"/>
    <setting name="guides.enabled" value="true"/>
    
    <!-- Exclure les autres packages vendor (mais pas EyoPHP) -->
    <setting name="ignore.paths" value="
        vendor/*,
        !vendor/aplouzeau/eyophp-framework/*
    "/>

    <!-- Template de documentation -->
    <template name="default"/>
    
    <!-- Paramètres de cache -->
    <setting name="cache.enabled" value="true"/>
    <setting name="cache.folder" value=".phpdoc/cache"/>
</phpdocumentor>
